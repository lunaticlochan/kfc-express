          <!-- Add a horizontal line between orders -->
          <% } %>
            <% }); %>
              <% function formatDate(dateTimeString) { %>
                <% const dateTime=new Date(dateTimeString); %>
                  <% const options={ weekday: 'long' , year: 'numeric' , month: 'long' , day: 'numeric' ,
                    hour: 'numeric' , minute: 'numeric' }; %>
